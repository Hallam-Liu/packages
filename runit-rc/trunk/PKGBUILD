# Maintainer: Chris Cromer <chris@cromer.cl>

_pkgname=runit-artix

pkgname=runit-rc
pkgver=20180505.2
pkgrel=1
pkgdesc='runit is a cross-platform Unix init scheme with service supervision'
arch=('x86_64')
url='https://github.com/artix-linux/runit-artix'
license=('GPL')
depends=('procps-ng' 'awk' 'bash' 'opentmpfiles' 'bootlogd')
provides=('init-kmod' 'init-udev' 'init-opentmpfiles' 'init-opensysusers')
conflicts=('init-kmod' 'init-udev' 'init-opentmpfiles' 'init-opensysusers')
source=("${_pkgname}-${pkgver}.tar.gz::${url}/archive/${pkgver}.tar.gz")
sha256sums=('c03681d89d4e76076f2722eb8e886e25bf451cfa6169e41040e1d3057ab3fddf')

build() {
	cd "${_pkgname}-${pkgver}"
	make
}

package() {
	cd "${_pkgname}-${pkgver}"
	make DESTDIR="${pkgdir}" PREFIX="/usr" install-rc
}
