# Maintainer: Chris Cromer <chris@cromer.cl>

_pkgname=runit-artix

pkgname=agetty-runit
pkgver=20180505.3
pkgrel=1
pkgdesc='agetty runit service scripts'
arch=('x86_64')
url='https://github.com/artix-linux/runit-artix'
license=('BSD3')
depends=('util-linux')
provides=('init-getty')
conflicts=('init-getty')
source=("${_pkgname}-${pkgver}.tar.gz::${url}/archive/${pkgver}.tar.gz")
sha256sums=('ef1b5a150909730e7baeb4f7313535b820a786061ac774986efa0bf6bcb92460')

build() {
	cd "${_pkgname}-${pkgver}"
	make
}

package() {
	cd "${_pkgname}-${pkgver}"
	make DESTDIR="${pkgdir}" PREFIX="/usr" install-getty
}
