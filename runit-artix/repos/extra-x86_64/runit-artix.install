post_install() {
    echo -e "\033[1m==>\033[0m After you install runit-artix, make sure to symlink all directories in"
    echo -e "\033[1m==>\033[0m /usr/lib/runit-artix/bin to /usr/bin."
}

post_upgrade() {
    echo -e "\033[1m==>\033[0m All runit services has been moved to /etc/runit/sv instead of /etc/sv,"
    echo -e "\033[1m==>\033[0m Make sure to update your symlinks."
}
