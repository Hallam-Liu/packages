# Maintainer: Muhammad Herdiansyah <koni@artixlinux.org>
pkgname=halt
pkgver=0.3.5
pkgrel=1
pkgdesc="Artix Linux's wrapper program for OpenRC and runit's shutdown scheme"
arch=('x86_64')
url="https://github.com/artix-linux/halt"
license=('BSD')
source=("$url/archive/$pkgver/$pkgname-$pkgver.tar.gz")
sha256sums=('fc543f140621687bc5fbc22b6beb54e85f727efec4897a0cf135af3472d35e62')

build() {
	cd "$pkgname-$pkgver"
	make
}

package() {
	cd "$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install

	install -Dm644 "COPYING" "$pkgdir/usr/share/licenses/halt/COPYING"
}
